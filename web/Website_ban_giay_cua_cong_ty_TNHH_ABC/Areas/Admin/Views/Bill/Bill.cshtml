
@model dynamic
@{
    ViewBag.Title = "Số hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Tổng Số Hóa Đơn</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Danh sách Hóa đơn theo mã định danh khách hàng 
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-examplee">
                            <thead>
                                <tr>
                                    <th>Mã hóa đơn</th>
                                    <th>Mã sản phẩm</th>
                                    <th>Mã định danh khách hàng</th>
                                    <th>Số lượng</th>
                                    <th>Tổng tiền</th>
                                    <th>Ngày đặt</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DatabaseProvider.EntityFramework.Hoadon item in Model.listHoaDon)
                                {
                                <tr class="gradeA">
                                    <td>@item.ID_HoaDon</td>
                                    <td>@item.ID_SanPham</td>
                                    <td>@item.ID_ThongTinKhachHang</td>
                                    <td>@item.SoLuong</td>
                                    <td>@item.TongTien</td>     
                                    <td></td>
                                </tr>}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
