                                <tr>
                                    <th>Sửa</th>
                                    <th>Mã sản phẩm</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Loại sản phẩm</th>
                                    <th>Giá Tiền</th>
                                    <th>Số size</th>
                                    <th>Màu</th>
                                    <th>Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DatabaseProvider.EntityFramework.SanPham item in Model.listSanPhamNam)
                                {
                                    <tr class="gradeA">
                                        <td><a href="@Url.Action("EditProductView", "ProductAdmin", new { id = item.ID_SanPham })"><i class="fa fa-wrench fa-fw"></i></a> </td>
                                        <td>@item.ID_SanPham</td>
                                        <td>@item.TenSanPham</td>
                                        <td>@item.ID_loaiSanPham</td>
                                        <td>@item.GiaTien.GetValueOrDefault(0).ToString("N0")</td>
                                        <td class="center">@item.ID_SoSize</td>
                                        <td class="center">@item.Mau</td>
                                        <td><button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("DeleteProductView", "ProductAdmin", new { id = item.ID_SanPham })'"><i class="fa fa-close fa-fw"></i></button></td>
                                    </tr>

                                }
