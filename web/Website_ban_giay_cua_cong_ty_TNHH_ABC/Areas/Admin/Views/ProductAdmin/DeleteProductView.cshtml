@model dynamic
@{
    ViewBag.Title = "DeleteProductView";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Sửa sản phẩm</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @foreach (DatabaseProvider.EntityFramework.SanPham item in Model.listSanPham)
                    {
                        <p> Danh sánh thông tin sản phẩm : @item.ID_SanPham</p>
                    }
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-10">
                            <form role="form">
                                @foreach (DatabaseProvider.EntityFramework.SanPham item in Model.listSanPham)
                                {
                                    <div class="form-group">
                                        <label>Tên sản phẩm</label>
                                        <input class="form-control" value="@item.TenSanPham" id="TenSanPhamAdmin">
                                    </div>
                                    <div class="form-group">
                                        <label>Loại sản phẩm</label>
                                        <select class="form-control" id="LoaiSanPhamAdmin">
                                            <option>@item.ID_loaiSanPham</option>
                                    
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Giá tiền</label>
                                        <input class="form-control" value="@item.GiaTien.GetValueOrDefault(0).ToString("N0")" id="GiaTienSanPhamAdmin">
                                    </div>
                                    <div class="form-group">
                                        <label>Số Size</label>
                                        <select class="form-control" id="SoSizeSanPhamAdmin">
                                            <option>@item.ID_SoSize</option>
                                     
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Màu</label>
                                        <input class="form-control" value="@item.Mau" id="MauSanPhamAdmin">
                                    </div>
                                    <div class="form-group">
                                        <label>File hình ảnh (jpg)</label>
                                        <input type="file" value="@item.Hinh" id="HinhSanPhamAdmin">
                                    </div>
                                    <div class="form-group">
                                        <label>Mô tả sản phẩm</label>
                                        <textarea class="form-control" rows="3"></textarea>
                                    </div>

                                    <button type="submit" class="btn btn-default" id="btnDeleteProductAdmin" data-id="@item.ID_SanPham">Xóa</button>
                                }
                            </form>
                            <script src="~/Areas/Admin/code/controllerJS/AddProduct.js"></script>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

