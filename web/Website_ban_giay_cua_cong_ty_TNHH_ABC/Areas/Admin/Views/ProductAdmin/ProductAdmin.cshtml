@model dynamic
@{
    ViewBag.Title = "ProductAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Product Admin</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
