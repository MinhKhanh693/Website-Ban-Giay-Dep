                                        <td>@item.ID_SanPham</td>
                                        <td>@item.TenSanPham</td>
                                        <td>@item.ID_loaiSanPham</td>
                                        <td>@item.GiaTien.GetValueOrDefault(0).ToString("N0")</td>
