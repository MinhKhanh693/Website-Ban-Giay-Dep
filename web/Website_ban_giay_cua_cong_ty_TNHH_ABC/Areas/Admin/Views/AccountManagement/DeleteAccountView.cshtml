@model dynamic
@{
    ViewBag.Title = "DeleteAccountView";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Sửa sản phẩm</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @foreach (DatabaseProvider.EntityFramework.ThongTinKhachHang item in Model.ListThongTinKhachHang)
                    {
                        <p> Danh sánh thông tin khách hàng : @item.ID_ThongTinKhachHang</p>
                    }
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-10">
                            <form role="form">
                                @foreach (DatabaseProvider.EntityFramework.ThongTinKhachHang item in Model.ListThongTinKhachHang)
                                {
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input class="form-control" value="@item.email" id="EmailUserAdmin">
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input class="form-control" value="@item.password" id="PasswordUserAdmin">
                                    </div>

                                    <div class="form-group">
                                        <label>Họ</label>
                                        <input class="form-control" value="@item.firstName" id="FirstNameUserAdmin">
                                    </div>
                                    <div class="form-group">
                                        <label>Tên</label>
                                        <input class="form-control" value="@item.lastName" id="LastNameUserAdmin">
                                    </div>

                                    <div class="form-group">
                                        <label>Số điện thoại</label>
                                        <input class="form-control" value="@item.SDT" id="PhoneUserAdmin">
                                    </div>
                                    <div class="form-group">
                                        <label>Ngày Sinh</label>
                                        <input class="form-control" value="@item.NgaySinh" id="DateOfBirthUserAdmin">
                                    </div>
                                    <div class="form-group">
                                        <label>Quốc tịch</label>
                                        <input class="form-control" value="@item.QuocTich" id="NationalityUserAdmin">
                                    </div>

                                    <div class="form-group">
                                        <label>Địa chỉ</label>
                                        <textarea class="form-control" rows="3" id="AddressUserAdmin">@item.DiaChi</textarea>
                                    </div>

                                    <button type="submit" class="btn btn-default " id="btnEditUserAdmin" data-id="@item.ID_ThongTinKhachHang">Xóa</button>
                                }
                            </form>
                            <script src="~/Areas/Admin/code/controllerJS/AccountManagement.js"></script>

                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

